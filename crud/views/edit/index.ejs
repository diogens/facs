<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>My CRUD in NodeJS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
</head>

<body class="container">
    <h2>Editar Registro</h2>
    <% data.forEach(function(details) { %>
    <form action="/dio/edit/<%= details._id %>" method="POST">
        Nome:
        <input class="form-control" type="text" value="<%= details.name %>" name="name" />
        Publisher:
        <input class="form-control" type="text" value="<%= details.publisher %>" name="publisher" />
        Desenvolvedora:
        <input class="form-control" type="text" value="<%= details.desenvolvedora %>" name="desenvolvedora" />
        Descrição:
        <input class="form-control" type="text" value="<%= details.descricao %>" name="descricao" />
        Lançamento:
        <input class="form-control" type="text" value="<%= details.lancamento %>" name="lancamento" />
        Preço:
        <input class="form-control" type="number" value="<%= details.preco %>" name="preco" />
        Nota:
        <input class="form-control" type="number" value="<%= details.nota %>" name="nota" />
        Tipo:
        <select class="form-control" value="<%= details.tipo %>" name="tipo">
            <option value="Rpg">Rpg</option>
            <option value="Ação">Ação</option>
            <option value="Violencia">Violencia</option>
            <option value="Corrida">Corrida</option>
            <option value="Plataforma">Plataforma</option>
            <option value="Online">Online</option>
            <option value="FPS">FPS</option>
            <option value="Retro">Retro</option>
        </select>
        Lingua:
        <select class="form-control" type="text" value="<%= details.tipo %>" name="lingua">
            <option value="Português">Português</option>
            <option value="Ingles">Ingles</option>
            <option value="Japones">Japones</option>
            <option value="Espanho">Espanho</option>
            <option value="Italiano">Italiano</option>
        </select>
        <br />
        <button class="btn btn-alert"><a href="/dio/show">Todos</a></button>
        <button class="btn btn-primary" type="submit">Editar</button>
    </form>
    <% }) %>
</body>

</html>